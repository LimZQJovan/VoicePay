@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Payee Name</th>
                    <th>Tel No</th>
                    <th>Amount</th>
                    <th>Transaction Date</th>
                    <th>Reference No</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal total = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PayeeName</td>
                        <td>@item.MobileNo</td>
                        <td>@item.Amount.ToString("0.00")</td>
                        <td>@item.TransactionDateTime</td>
                        <td>@item.ReferenceNo</td>
                    </tr>
                    total += item.Amount;
                }
                <tr>
                    <td colspan="2"><b>Total:</b></td>
                    <td><b>@total.ToString("0.00")</b></td>
                    <td colspan="3"></td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No transactions found!</span>
}
