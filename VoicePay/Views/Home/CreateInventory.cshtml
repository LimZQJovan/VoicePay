@model VoicePay.Models.Inventory
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Create Inventory";
}
<h3 class="PageTitle text-center" style=" font-weight:bold">
    Create Inventory</h3>

<style>
    .custom-btn-primary {
        background-color: #04AA6D; /* Custom color for primary button */
        color: #ffffff; /* Text color for primary button */
        border: none;
        cursor: pointer;
    }

        .custom-btn-primary:hover {
            background-color: #3e8e41;
            color: #ffffff;
        }

        .custom-btn-primary:active {
            background-color: #3e8e41;
            box-shadow: 0 5px #666;
            color: #ffffff;
        }
</style>
<hr />
<div class="container mt-4">
    <form asp-action="CreateInventory">
        <fieldset class="FormContent">
            <div class="row mb-3" hidden>
                <label asp-for="InventoryID" class="col-md-3 col-form-label">Inventory ID:</label>
                <div class="col-md-9">
                    <input asp-for="InventoryID" class="form-control" value=0/>
                    <span asp-validation-for="InventoryID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ItemName" class="col-md-3 col-form-label">Item Name:</label>
                <div class="col-md-9">
                    <input asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Quantity" class="col-md-3 col-form-label">Quantity:</label>
                <div class="col-md-9">
                    <input asp-for="Quantity" type="number" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="SupplierName" class="col-md-3 col-form-label">Supplier Name:</label>
                <div class="col-md-9">
                    <input asp-for="SupplierName" class="form-control" />
                    <span asp-validation-for="SupplierName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="SupplierContactNo" class="col-md-3 col-form-label">Supplier Contact:</label>
                <div class="col-md-9">
                    <input asp-for="SupplierContactNo" class="form-control" />
                    <span asp-validation-for="SupplierContactNo" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3" hidden>
                <label asp-for="AccId" class="col-md-3 col-form-label">Acc ID:</label>
                <div class="col-md-9">
                    <input asp-for="AccId" class="form-control" value="NA" />
                    <span asp-validation-for="AccId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-right">
                    <input type="submit" value="Confirm" class="btn custom-btn-primary" />
                    <a asp-action="Inventory" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </fieldset>
    </form>
</div>

