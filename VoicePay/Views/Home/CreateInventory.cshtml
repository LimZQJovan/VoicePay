@model VoicePay.Models.Inventory

@{
 ViewData["Title"] = "Create";
}

<h4 class="PageTitle">Add Staff Record</h4>
<hr />
<form asp-action="Create">
 <fieldset class="FormContent">
     <div class="row mb-3">
     <label asp-for="ItemName"
     class="col-sm-3 col-form-label"></label>
     <div class="col-sm-9 col-md-5">
                    <input asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName"
     class="text-danger"></span>
     </div>
     </div>
 <div class="row mb-3">
            <label asp-for="Quantity"
 class="col-sm-3 col-form-label"></label>
 <div class="col-sm-9 col-md-5">
 <div class="form-group form-check-inline">
 <label class="col-form-label">
                        <input asp-for="Quantity" type="radio" value="M"
 checked class="form-check-input" />
 <span style="font-weight:normal;
 padding-right:20px">Male</span>
 </label>
<label class="col-form-label">
                        <input asp-for="Quantity" type="radio" value="F"
 class="form-check-input" />
 <span style="font-weight:normal;
 padding-right:20px">Female</span>
 </label>
 </div>
 </div>
 </div>
 <div class="row mb-3">
 <label asp-for="SupplierName"
 class="col-sm-3 col-form-label"></label>
 <div class="col-sm-9 col-md-5">
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName"
 class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="SupplierContactNo"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="SupplierContactNo" class="form-control" />
                <span asp-validation-for="SupplierContactNo"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Create"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="Inventory">Back to List</a>
        </div>
    </fieldset>
</form>