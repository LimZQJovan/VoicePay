@model List<VoicePay.Models.Transaction>
@{
	ViewData["Title"] = "View Tramsaction Summary";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Date Picker Example</title>
    <!-- Include flatpickr CSS and JS files -->
    <link rel="stylesheet" href="~/css/_ViewReport.css">

    <style>
        .date-filter-container {
        width: 100px; /* Set a fixed width for the container */
        margin: auto; /* Center the container */
        display: flex;
        flex-wrap: wrap;
        gap: 10px; /* Add space between elements */
        justify-content: center; /* Center items initially */
    }

       .date-filters {
        display: flex;
        gap: 10px; /* Add space between dropdowns and labels */
    }

            .date-filters select,
            .date-filters label {
        width: 100px; /* Set a fixed width for dropdowns and labels */
    }

        button {
        margin-top: 10px;
    }

    </style>
</head>
<body>
    <h4 class="PageTitle" style="text-align: center;">Reports</h4>

    <form asp-controller="Home" asp-action="Report" method="post">
        <div class="date-filter-container">
            <div class="date-filters">
                <label for="day-select">Day:</label>
                <select id="day-select" name="selectedDay">
                    <option value="-1">None</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                    <option value="24">24</option>
                    <option value="25">25</option>
                    <option value="26">26</option>
                    <option value="27">27</option>
                    <option value="28">28</option>
                    <option value="29">29</option>
                    <option value="30">30</option>
                    <option value="31">31</option>

                </select>

                <label for="month-select">Month:</label>
                <select id="month-select" name="selectedMonth">
                    <option value="-1">None</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">Novemeber</option>
                    <option value="12">December</option>
                </select>

                <label for="year-select">Year:</label>
                <select id="year-select" name="selectedYear">
                    <option value="-1">None</option>
                    <option value="2021">2021</option>
                    <option value="2022">2022</option>
                    <option value="2023">2023</option>
                </select>

                <button type="submit">Filter Data</button>
            </div>
            
        </div>
    </form>

</body>
</html>

<!-- Add a partial view to display a list of staff records
 in a tabular format. -->
<partial name="_ViewReport.cshtml" model="@Model" />

