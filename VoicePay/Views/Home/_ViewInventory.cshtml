@model IEnumerable<VoicePay.Models.Inventory>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


@if (Model.ToList().Count > 0)
{
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="~/css/_ViewInventory.css">

    </head>

    <div class="table-responsive">
        <table id="viewInventory" class="table table-striped table-bordered">
            <thead class="table-light ">
                <tr>
                    <th>ID</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Supplier Name</th>
                    <th>Supplier Contact</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InventoryID.ToString()</td>
                        <td class="notranslate">@item.ItemName</td>
                        <td>@item.Quantity.ToString()</td>
                        <td class="notranslate">@item.SupplierName</td>
                        <td>@item.SupplierContactNo</td>
                        <td>
                            <!-- Edit button -->
                            <button class="btn btn-primary btn-sm btn-action" onclick="location.href='@Url.Action("EditInventory", "Home", new { id = item.InventoryID })'">
                                <span class="material-symbols-outlined notranslate">edit</span>
                            </button>

                            <!-- Delete button -->
                            <button class="btn btn-danger btn-sm btn-action" onclick="location.href='@Url.Action("DeleteInventory", "Home", new { id = item.InventoryID })'">
                                <span class="material-symbols-outlined notranslate">delete</span>
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <span style="color:red">No record found!</span>
}
