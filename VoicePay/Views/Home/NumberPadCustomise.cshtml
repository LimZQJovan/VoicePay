<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Button</title>
</head>
<body>

    <div class="container">
        <h2>Edit Button</h2>
        <form>
            <label for="newValue">Current Value:</label>
            <input type="text" id="currentValue" placeholder="Current value">

            <label for="newText">Current Text:</label>
            <input type="text" id="currentText" placeholder="Current text">

@*            <label for="newValue">New Value:</label>
            <input type="text" id="newValue" placeholder="Enter the new value">

            <label for="newText">New Text:</label>
            <input type="text" id="newText" placeholder="Enter the new text">*@

            <button type="button" onclick="applyChanges()">Apply Changes</button>
        </form>
    </div>

    <script>
        // Function to retrieve edited values from localStorage
        function getCurrentValues() {
            const currentValue = localStorage.getItem('currentValue');
            const currentText = localStorage.getItem('currentText');
            return { currentValue, currentText };
        }
        // Function to set values in the input fields
        function setValuesInInputFields() {
            const { currentValue, currentText } = getCurrentValues();
            document.getElementById('currentValue').value = currentValue;
            document.getElementById('currentText').value = currentText;
        }
        // Call setValuesInInputFields when the editing page loads
        document.addEventListener('DOMContentLoaded', setValuesInInputFields);

        function applyChanges() {
            const newValue = document.getElementById('currentValue').value;
            const newText = document.getElementById('currentText').value;

            // Store the edited values in localStorage
            localStorage.setItem('currentValue', newValue);
            localStorage.setItem('currentText', newText);

            // Close the editing page
            window.close();

            // Redirect back to the home page
            window.location.href = 'NumberPad'; // Adjust the URL as needed
        }
    </script>

</body>
</html>
